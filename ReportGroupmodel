package com.scb.rwtoolbackend.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Table(name = "report_groups")
@Data
@NoArgsConstructor
public class ReportGroup {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(unique = true, nullable = false)
    private String name; // e.g., "Finance_Reports"
    
    private String description;
    
    // Group type can be used later (e.g., 'Core', 'Optional')
    private String type; 

    public ReportGroup(String name, String description, String type) {
        this.name = name;
        this.description = description;
        this.type = type;
    }
}
